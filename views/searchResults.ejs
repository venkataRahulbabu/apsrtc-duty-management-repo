<%- include('partials/adminHeader'); -%>

    <!-- Main Content of the body -->
    <div class="text-center my-10">
        <span class="text-violet-700 px-3 mx-auto text-2xl">Employee Table</span>
    </div>
    <div class="relative px-6 lg:px-5">
        <main class="md:mx-5 mx-auto">
            <div class="overflow-hidden bg-white mt-10 mb-40">
                <div class="px-6 py-6">
                    <div class="relative overflow-x-auto shadow-lg sm:rounded-lg pb-5">
                        <div class="flex justify-start mb-5 mx-10">
                            <% if (results.length==0) { %>
                                <span class="text-red-800 items-start justify-start text-lg">*** Search Results for <%=
                                        searchItem %> are "Empty" ***</span>
                                <% } else { %>
                                    <span class="text-indigo-800 items-start justify-start text-lg">*** Search Results
                                        for <%= searchItem %> are: ***</span>
                                    <% } %>
                        </div>
                        <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
                            <thead
                                class="text-sm text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                                <tr class="text-center">
                                    <th scope="col" class="px-6 py-3">Employee Name</th>
                                    <th scope="col" class="px-6 py-3">User ID</th>
                                    <th scope="col" class="px-6 py-3">Role</th>
                                    <th scope="col" class="px-6 py-3">Mobile Number</th>
                                    <th scope="col" class="px-6 py-3">Email</th>
                                    <th scope="col" class="px-6 py-3">Action</th>
                                </tr>
                            </thead>
                            <tbody>

                                <% for (let i=0; i < results.length; i++) { %>
                                    <tr
                                        class="bg-white text-center border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
                                        <th scope="row"
                                            class="px-6 py-3 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                                            <%= results[i].username %>
                                        </th>
                                        <td class="px-6 py-3">
                                            <%= results[i].id %>
                                        </td>
                                        <td class="px-6 py-3">
                                            <%= results[i].category %>
                                        </td>
                                        <td class="px-6 py-3">
                                            <%= results[i].phone %>
                                        </td>
                                        <td class="px-6 py-3">
                                            <%= results[i].email %>
                                        </td>
                                        <td class="flex flex-row px-6 py-3 space-x-10">
                                            <a href="/<%= userPassingData.username %>/edit/<%= results[i].id %>"
                                                class="font-medium text-blue-600 dark:text-blue-500 hover:underline">Edit</a>
                                            <a href="/delete/<%= results[i].id %>"
                                                class="font-medium text-red-900 hover:underline"
                                                onclick="return confirm('Are you sure you want to delete this user?')">Delete</a>
                                        </td>
                                    </tr>
                                    <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </main>
    </div>

